@{
    var user = Session["UserInfo"] as BerkTokgozBlogSitesi.Models.ViewModel.UserInfo;
    
}

<!DOCTYPE html>
<html class="no-js">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Berk Tokgöz Blog</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
    <link rel="icon" type="image/png" href="content/favicon.png">

    <link rel="stylesheet" href="/Content/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Content/css/font-awesome.min.css">
    <link rel="stylesheet" href="/Content/css/typicons.css">
    <link rel="stylesheet" href="/Content/css/flexslider.css">
    <link rel="stylesheet" href="/Content/css/jquery.selectBoxIt.css">
    <link rel="stylesheet" href="/Content/css/jquery.fancybox.css">
    <link rel="stylesheet" href="/Content/css/main.css">
    <script src="/Content/js/vendor/modernizr-2.6.2-respond-1.1.0.min.js"></script>
</head>
<body>
    <header class="navbar navbar-default" style="background-color:steelblue">
        <div class="container">
            <div class="row">
                <div class="navbar-header col-sm-3">


                    <ul class="social-icons nav navbar-nav">
                        <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                        <li><a href="#"><i class="fa fa-pinterest"></i></a></li>
                    </ul>
                </div>
                <div class="col-sm-9">
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="/Home/Anasayfa">Anasayfa</a></li>

                            <li><a href="/Hakkimizda/Hakkimizda">Hakkımızda</a></li>


                            <li><a href="/Iletisim/Iletisim">İletişim</a></li>
                            @if (user == null)
                            {
                                <li class="dropdown">
                                    <a href="/Giris/GirisYap" id="navbarDrop2" class="dropdown-toggle" data-toggle="dropdown">Kayıt/Giriş</a>
                                    <ul class="dropdown-menu" role="menu" aria-labelledby="navbarDrop2">
                                        <li><a href="/Kullanici/KayitOl">Kayıt Ol</a></li>
                                        <li><a href="/Kullanici/GirisYap">Giriş Yap</a></li>
                                    </ul>
                                </li>
                            }
                            @if (user != null)
                            {
                            <li class="dropdown">
                                <a href="/Giris/GirisYap" id="navbarDrop2" class="dropdown-toggle" data-toggle="dropdown">Profil(@user.UserName)</a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="navbarDrop2">
                                    @if (user.IsAdmin || user.Yazar)
                                    {
                                        <li><a href="/Yonetici/MakaleYaz">Makale Yaz</a></li>
                                    }                           
                                    <li><a href="/Kullanici/ProfilAyarlari">Profil Ayarları</a></li>
                                    <li><a href="@Url.Action("Cikis", "Kullanici")">Çıkış</a></li>
                                </ul>
                            </li>
                            }
                            @if (user != null && user.IsAdmin)
                            {
                                <li class="dropdown">
                                    <a href="/Giris/GirisYap" id="navbarDrop2" class="dropdown-toggle" data-toggle="dropdown">Admin Paneli</a>
                                    <ul class="dropdown-menu" role="menu" aria-labelledby="navbarDrop2">
                                        <li><a href="/Yonetici/KategoriAyarlari">Kategori Ayarları</a></li>
                                        <li><a href="/Yonetici/Uyeler">Üyeler</a></li>
                                        <li><a href="/Yonetici/Sayfalar">Sayfalar</a></li>
                                        <li><a href="/Yonetici/Makaleler">Makaleler</a></li>

                                    </ul>
                                </li>
                            }



                        </ul>

                    </div>
                </div>
            </div>
        </div>
        

    </header>
 
    <header class="main-header hidden-xs">
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <div class="logo">
                        <figure>
                            <a href="index.html">
                                <img src="~/Content/content/logo2.jpg" alt="logo" />
                            </a>
                        </figure>
                    </div>
                </div>
                <div class="col-sm-4 text-right">
                    <div class="search-wrap active">
                        <div class="search-input">
                            <form action="#">
                                <div class="input-group">
                                    <input type="text" class="form-control" name="s" placeholder="Aramak istediğiniz metni yazın">
                                    <span class="input-group-addon"><button type="submit"><i class="fa fa-search"></i></button></span>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </header>


    @RenderBody()
    

    <footer class="main-footer">
        <div class="footer-newsletter" style="background-color:steelblue">
            <div class="container">
                <div class="row">
                    <div class="col-sm-8 left">
                        <h2>Blog'umuza <strong>ABONE OL</strong></h2>
                        <p>Periyodik makaleler, güncellemeler <br /> ve daha fazlası için.</p>
                    </div>
                    <div class="col-sm-4 right">
                        <form action="#">
                            <div class="input-group">
                                <input type="email" class="form-control" name="newsletter-email" placeholder="Email Adresiniz:">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="fa fa-check"></i></button>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-social">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <ul class="social-icons">
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                            <li><a href="#"><i class="fa fa-pinterest"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-widgets">
            <div class="container">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="footer-widget">
                            <a href="#" class="footer-logo">
                                <img src="/Content/content/logo2.jpg" alt="Logo" />
                            </a>
                            <div class="copyright">© 2017 <br /> Developed by <a title="Berk Tokgöz" href="#">Berk Tokgöz</a></div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </footer>
    <div class="go-top">
        <i class="fa fa-angle-up"></i>
    </div>
    <script src="/Content/js/vendor/jquery-1.10.1.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js"></script>
    <script src="/Content/js/vendor/bootstrap.min.js"></script>
    <script src="/Content/js/vendor/jquery.isotope.min.js"></script>
    <script src="/Content/js/vendor/jquery.isotope.perfectmasonry.js"></script>
    <script src="/Content/js/vendor/jquery.raty.min.js"></script>
    <script src="/Content/js/vendor/jquery.flexslider.js"></script>
    <script src="/Content/js/vendor/jquery.mousewheel.js"></script>
    <script src="/Content/js/vendor/jquery.mCustomScrollbar.js"></script>
    <script src="/Content/js/vendor/jquery.hoverdir.js"></script>
    <script src="/Content/js/vendor/jquery.selectBoxIt.min.js"></script>
    <script src="/Content/js/vendor/jquery.fancybox.pack.js"></script>
    <script src="/Content/js/main.js"></script>
</body>

</html>