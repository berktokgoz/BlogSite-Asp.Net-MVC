
@{
    ViewBag.Title = "Anasayfa";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@model List<BerkTokgozBlogSitesi.Models.Makale>

<section class="main-container">
    <div class="container">
        <div class="row">
            <div class="col-sm-8">

                <div class="posts">

                    <h1>Anasayfa</h1>

                    @foreach (var mak in Model)
                    {

                        
                            <article class="blog-post">
                                <header>
                                    <h2>
                                        <a href="#">@mak.Baslik </a>
                                    </h2>
                                    <ul class="info">
                                        <li><a href="#">{ @mak.Kategori.Adi }</a></li>
                                        <li><a href="#">{ @mak.Tarih }</a></li>
                                    </ul>
                                </header>
                                <div class="content">
                                    <div class="text">
                                        @mak.İcerik
                                    </div>
                                    <a href="/Makale/Detay/@mak.ID" class="btn btn-default">Devamını Oku</a>
                                </div>
                            </article>
                       

                    }

                  



                </div>
            </div>

            <aside class="col-sm-4">
                <div style="float:right" class="widgets">
                    @{
                        Html.RenderAction("KategoriWidgetGetir", "Home");

                        Html.RenderAction("PostsWidgetGetir", "Home");

                        Html.RenderAction("TagsWidgetGetir", "Home");

                    }
                </div>
            </aside>
        </div>
    </div>
</section>














